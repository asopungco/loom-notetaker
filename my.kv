#:import Factory kivy.factory.Factory

<FileChooser>:
    label: label
    orientation: "vertical"

    BoxLayout:
        FileChooserListView:
            canvas.before:
                Color:
                    rgb: .4, .2, .5
                Rectangle:
                    pos:  self.pos
                    size: self.size
            on_selection: root.file_fire_select(*args)
    
    Label:
        id: label
        size_hint_y: .1
        canvas.before:
            Color:
                rgb: 1, .5, .4
            Rectangle:
                pos: self.pos   
                size: self.size

<MyPopup@Popup>:
    auto_dismiss: False
    

<P>
    id: label
    BoxLayout:
        FileChooserListView:
            canvas.before:
                Color:
                    rgb: .4, .2, .5
            on_selection: root.file_fire_select(*args)

<MyGridLayout>
    label: text
    cols: 1
    BoxLayout:
        
        cols: 2 
        orientation: "vertical"
        size: root.width, root.height

        #padding: 50
        #spacing: 20

        Button:
            text: "Open File"
            size_hint: (.2, .2)
            #height: 50
            #width: 200
            on_release: root.btn()

        
        TextInput
            id: text
